---
import BaseLayout from '@layouts/BaseLayout.astro';
import { ThemeAwareSignIn } from '@components/ThemeAwareClerkWrapper';

export const prerender = false;
---

<BaseLayout title="Sign In - Keep Choosing Good">
  <main class="sign-in-container">
    <ThemeAwareSignIn client:load />
  </main>
</BaseLayout>

<style>
  .sign-in-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 2rem;
  }
</style>
