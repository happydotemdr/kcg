---
import BaseLayout from '@layouts/BaseLayout.astro';

export const prerender = false;

// Check authentication status (optional redirect for logged-in users)
const { userId } = Astro.locals.auth();

// Redirect to dashboard if authenticated
if (userId) {
  return Astro.redirect('/dashboard');
}
---

<BaseLayout
  title="Keep Choosing Good - Home"
  description="Welcome to Keep Choosing Good - A platform for positive change and meaningful choices"
>
  <main>
    <section class="hero">
      <div class="container">
        <h1>Keep Choosing Good</h1>
        <p class="tagline">A platform for positive change and meaningful choices</p>
        <div class="cta-buttons">
          <a href="/chat" class="button button-primary">Try AI Chat</a>
          <a href="/about" class="button button-secondary">Learn More</a>
          <a href="/blog" class="button button-secondary">Read Our Blog</a>
        </div>
      </div>
    </section>

    <section class="features">
      <div class="container">
        <h2>Why Choose Good?</h2>
        <div class="feature-grid">
          <div class="feature-card">
            <div class="icon">ü§ñ</div>
            <h3>AI-Powered Chat</h3>
            <p>Chat with Claude AI for guidance, answers, and creative assistance with vision support</p>
          </div>
          <div class="feature-card">
            <div class="icon">üåü</div>
            <h3>Positive Impact</h3>
            <p>Make choices that create ripples of positive change in the world</p>
          </div>
          <div class="feature-card">
            <div class="icon">üéØ</div>
            <h3>Meaningful Goals</h3>
            <p>Set and achieve goals that align with your values</p>
          </div>
          <div class="feature-card">
            <div class="icon">ü§ù</div>
            <h3>Community</h3>
            <p>Connect with others committed to making good choices</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  main {
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
  }

  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    position: relative;
    overflow: hidden;
    color: white;
    padding: clamp(5rem, 15vh, 10rem) 0 clamp(4rem, 12vh, 8rem);
    text-align: center;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, color-mix(in srgb, var(--color-secondary) 30%, transparent) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, color-mix(in srgb, var(--color-primary) 30%, transparent) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    margin-bottom: var(--spacing-lg);
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 1.1;
    animation: fadeIn 0.8s ease-out;
  }

  .tagline {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    margin-bottom: var(--spacing-3xl);
    opacity: 0.95;
    font-weight: 400;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: rgba(255, 255, 255, 0.95);
    animation: fadeIn 0.8s ease-out 0.2s backwards;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeIn 0.8s ease-out 0.4s backwards;
  }

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md) var(--spacing-2xl);
    border-radius: var(--radius-lg);
    font-weight: 600;
    font-size: 1rem;
    transition: all var(--transition-base);
    text-decoration: none;
    border: 2px solid transparent;
    cursor: pointer;
  }

  .button:hover {
    transform: translateY(-3px);
    text-decoration: none;
  }

  .button-primary {
    background: var(--color-background);
    color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .button-primary:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-3px) scale(1.02);
  }

  .button-secondary {
    background: color-mix(in srgb, var(--color-background) 15%, transparent);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: white;
    border: 2px solid color-mix(in srgb, var(--color-background) 30%, transparent);
  }

  .button-secondary:hover {
    background: color-mix(in srgb, var(--color-background) 25%, transparent);
    border-color: color-mix(in srgb, var(--color-background) 50%, transparent);
    box-shadow: var(--shadow-lg);
  }

  /* Features Section */
  .features {
    padding: clamp(4rem, 10vh, 7rem) 0;
    background: linear-gradient(to bottom, var(--color-background) 0%, var(--color-surface) 100%);
  }

  .features h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    text-align: center;
    margin-bottom: var(--spacing-3xl);
    color: var(--color-text);
    font-weight: 800;
    letter-spacing: -0.03em;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(280px, 100%), 1fr));
    gap: var(--spacing-xl);
    max-width: 1100px;
    margin: 0 auto;
  }

  .feature-card {
    background: var(--color-background);
    padding: var(--spacing-2xl);
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-slow);
    border: 1px solid color-mix(in srgb, var(--color-border) 20%, transparent);
    position: relative;
    overflow: hidden;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    transform: scaleX(0);
    transition: transform var(--transition-slow);
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: color-mix(in srgb, var(--color-primary) 10%, transparent);
  }

  .feature-card:hover::before {
    transform: scaleX(1);
  }

  .icon {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-lg);
    display: inline-block;
    transition: transform var(--transition-slow);
    filter: drop-shadow(0 2px 4px color-mix(in srgb, var(--color-text) 10%, transparent));
  }

  .feature-card:hover .icon {
    transform: scale(1.1) rotate(5deg);
  }

  .feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
    font-weight: 700;
  }

  .feature-card p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    font-size: 0.9375rem;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--spacing-md);
    }

    .hero {
      padding: clamp(3rem, 10vh, 6rem) 0 clamp(2.5rem, 8vh, 5rem);
    }

    .feature-grid {
      gap: var(--spacing-lg);
    }

    .feature-card {
      padding: var(--spacing-xl);
    }
  }

  @media (max-width: 480px) {
    .cta-buttons {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }

    .button {
      width: 100%;
    }
  }
</style>
