---
/**
 * Minimal ChatKit Test Page
 * NO custom CSS - just bare ChatKit to verify composer renders
 */
import DosChatMinimal from '../components/gpt/DosChat-minimal';

export const prerender = false;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChatKit Composer Test</title>
    <style>
      body {
        margin: 0;
        padding: 20px;
        font-family: system-ui, -apple-system, sans-serif;
      }
      .test-info {
        background: #f0f0f0;
        padding: 15px;
        margin-bottom: 20px;
        border: 2px solid #333;
      }
    </style>
  </head>
  <body>
    <div class="test-info">
      <h1>ChatKit Composer Diagnostic Test</h1>
      <p><strong>Purpose:</strong> Verify ChatKit composer renders without any custom CSS interference</p>
      <p><strong>Expected:</strong> You should see a text input field at the bottom of the red-bordered container</p>
      <p><strong>If composer is missing:</strong> Problem is with ChatKit configuration, not CSS</p>
    </div>

    <DosChatMinimal client:only="react" />
  </body>
</html>
