---
/**
 * Chat Page
 * Modern AI chat experience powered by Claude
 *
 * Note: This page is protected by Clerk middleware.
 * Unauthenticated users are automatically redirected to /sign-in
 */
import ChatComponent from '../components/chat/Chat';

export const prerender = false;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AI Chat - Keep Choosing Good</title>
    <meta name="description" content="Chat with Claude AI - a helpful, harmless, and honest AI assistant" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/themes/tokens.css" />
  </head>
  <body class="m-0 p-0 overflow-hidden">
    <ChatComponent client:only="react" />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
      'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
      sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--color-surface);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--color-text-light);
    border-radius: var(--radius-sm);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-secondary);
  }
</style>
