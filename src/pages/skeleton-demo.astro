---
/**
 * Skeleton Loader Demo Page
 * Shows all skeleton loaders for visual testing
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import SummaryCardsSkeleton from '../components/usage/skeletons/SummaryCardsSkeleton';
import ChartSkeleton from '../components/usage/skeletons/ChartSkeleton';
import ConversationListSkeleton from '../components/usage/skeletons/ConversationListSkeleton';

// Protect this page in production
const isDev = import.meta.env.DEV;
if (!isDev) {
  return Astro.redirect('/');
}
---

<BaseLayout title="Skeleton Loaders Demo">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8 px-4">
    <div class="max-w-7xl mx-auto space-y-12">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">
          Skeleton Loader Demo
        </h1>
        <p class="text-gray-600 dark:text-gray-400">
          Visual demonstration of skeleton loading states
        </p>
      </div>

      <!-- Summary Cards Skeleton -->
      <section class="space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
            Summary Cards Skeleton
          </h2>
          <span class="text-sm text-gray-500 dark:text-gray-400 font-mono">
            SummaryCardsSkeleton.tsx
          </span>
        </div>
        <SummaryCardsSkeleton client:load />
      </section>

      <!-- Chart Skeleton -->
      <section class="space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
            Chart Skeleton
          </h2>
          <span class="text-sm text-gray-500 dark:text-gray-400 font-mono">
            ChartSkeleton.tsx
          </span>
        </div>
        <ChartSkeleton client:load />
      </section>

      <!-- Conversation List Skeleton -->
      <section class="space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
            Conversation List Skeleton (10 rows)
          </h2>
          <span class="text-sm text-gray-500 dark:text-gray-400 font-mono">
            ConversationListSkeleton.tsx
          </span>
        </div>
        <ConversationListSkeleton client:load rowCount={10} />
      </section>

      <!-- Back Link -->
      <div class="text-center pt-8">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
