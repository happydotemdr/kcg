---
import GoogleAnalytics from '@components/analytics/GoogleAnalytics.astro';
import GoogleAds from '@components/analytics/GoogleAds.astro';
import MetaPixel from '@components/analytics/MetaPixel.astro';
import TwitterPixel from '@components/analytics/TwitterPixel.astro';
import NavigationAuth from '@components/NavigationAuth';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Keep Choosing Good',
  description = 'Keep Choosing Good - A platform for positive change and meaningful choices',
  image = '/images/og-image.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Analytics & Tracking -->
    <GoogleAnalytics />
    <GoogleAds />
    <MetaPixel />
    <TwitterPixel />
  </head>
  <body>
    <nav class="main-nav">
      <div class="nav-container">
        <a href="/" class="nav-logo">
          <span class="logo-text">Keep Choosing Good</span>
        </a>

        <div class="nav-links">
          <NavigationAuth isInNav={true} client:only="react" />
        </div>

        <div class="nav-auth">
          <NavigationAuth client:only="react" />
        </div>
      </div>
    </nav>

    <main class="main-content">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #4f46e5;
    --color-secondary: #7c3aed;
    --color-text: #1f2937;
    --color-text-light: #6b7280;
    --color-background: #ffffff;
    --color-surface: #f9fafb;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: var(--color-background);
    color: var(--color-text);
  }

  body {
    line-height: 1.6;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 700;
  }

  /* Navigation Styles */
  .main-nav {
    background: var(--color-background);
    border-bottom: 1px solid #e5e7eb;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  }

  .nav-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .nav-logo {
    text-decoration: none;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-primary);
    white-space: nowrap;
    transition: opacity 0.2s;
  }

  .nav-logo:hover {
    opacity: 0.8;
    text-decoration: none;
  }

  .logo-text {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  .nav-link {
    color: var(--color-text);
    font-weight: 500;
    transition: color 0.2s;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .nav-auth {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .dashboard-link {
    padding: 0.5rem 1rem;
    background: var(--color-surface);
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .dashboard-link:hover {
    background: var(--color-primary);
    color: white;
    text-decoration: none;
  }

  .sign-in-button {
    padding: 0.5rem 1.5rem;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
    font-family: inherit;
  }

  .sign-in-button:hover {
    background: var(--color-secondary);
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .sign-in-button:active {
    transform: translateY(0);
  }

  .main-content {
    min-height: calc(100vh - 73px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .nav-container {
      flex-wrap: wrap;
      padding: 1rem;
      gap: 1rem;
    }

    .nav-logo {
      font-size: 1.1rem;
    }

    .nav-links {
      order: 3;
      width: 100%;
      justify-content: flex-start;
      gap: 1.5rem;
      padding-top: 0.5rem;
      border-top: 1px solid #e5e7eb;
    }

    .nav-auth {
      margin-left: auto;
    }
  }

  @media (max-width: 480px) {
    .nav-container {
      padding: 0.75rem;
    }

    .nav-logo {
      font-size: 1rem;
    }

    .nav-links {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .nav-link {
      padding: 0.25rem 0;
    }

    .sign-in-button {
      padding: 0.4rem 1rem;
      font-size: 0.8rem;
    }

    .dashboard-link {
      padding: 0.4rem 0.75rem;
      font-size: 0.875rem;
    }
  }
</style>
