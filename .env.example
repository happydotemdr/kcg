# Anthropic Claude API (Required for Claude chat)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# OpenAI API (Required for ChatGPT page)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Clerk Authentication (Required for auth features)
# Get from: https://dashboard.clerk.com → API Keys
# Note: Use pk_test_... and sk_test_... for development
#       Use pk_live_... and sk_live_... for production
PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk Configuration (Optional)
# Customize redirect URLs after sign-in/sign-up
PUBLIC_CLERK_SIGN_IN_URL=/sign-in
PUBLIC_CLERK_SIGN_UP_URL=/sign-up
PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Clerk Webhooks (Optional - for advanced features)
# Get from: https://dashboard.clerk.com → Webhooks
CLERK_WEBHOOK_SECRET=

# Google Analytics 4
# Get from: https://analytics.google.com/ (format: G-XXXXXXXXXX)
GA_MEASUREMENT_ID=

# Google Ads / AdSense
# Get from: https://www.google.com/adsense/ (format: ca-pub-XXXXXXXXXXXXXXXX)
GOOGLE_ADS_ID=

# Meta (Facebook) Pixel
# Get from: https://business.facebook.com/events_manager (format: numeric ID)
META_PIXEL_ID=

# Twitter/X Pixel
# Get from: https://ads.twitter.com/ (format: alphanumeric ID)
TWITTER_PIXEL_ID=

# PostgreSQL 17 Database Configuration
# Choose ONE of the following connection methods:

# Option 1: Single DATABASE_URL (recommended for production)
# Format: postgresql://user:password@host:port/database
# Example: postgresql://myuser:mypassword@localhost:5432/kcg_db
DATABASE_URL=

# Option 2: Individual connection parameters (useful for development)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kcg_db
DATABASE_USER=postgres
DATABASE_PASSWORD=

# Database connection settings
DATABASE_SSL=false
DATABASE_POOL_MAX=20
